<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/item_image_view_app"
        android:layout_width="@dimen/item_w"
        android:layout_height="@dimen/item_h"
        android:layout_marginBottom="2dp"
        tools:ignore="ContentDescription"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_text_view_app"
        android:layout_width="@dimen/item_text_w"
        android:layout_height="@dimen/item_text_h"
        android:layout_marginBottom="@dimen/item_margin_bottom"
        android:autoSizeMaxTextSize="@dimen/item_text_size_max"
        android:autoSizeMinTextSize="@dimen/item_text_size_min"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/white"
        tools:text="@string/app_name" />
    <!--    android:textSize="@dimen/item_text_size"-->
    <!--    android:maxLength="8"-->

</LinearLayout>
