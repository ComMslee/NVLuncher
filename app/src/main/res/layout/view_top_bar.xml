<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/side_w"
        android:layout_height="@dimen/side_h"
        android:background="@drawable/m_top_left_icon_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top_bar_store"
            android:layout_width="@dimen/layout_view_top_bar_top_side_bar_w"
            android:layout_height="@dimen/layout_view_top_bar_top_side_bar_h"
            android:src="@drawable/bg_selector_play_store" />

        <TextView
            android:id="@+id/top_bar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_top_date"
            android:gravity="center"
            android:text="04. September. 2020"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_view_top_bar_top_center_text"
            tools:layout_editor_absoluteX="85dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/layout_view_top_bar_top_center_w"
        android:layout_height="@dimen/layout_view_top_bar_top_center_h"
        android:background="@drawable/m_top_center_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="@dimen/side_w"
        android:layout_height="@dimen/side_h"
        android:background="@drawable/m_top_right_icon_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top_bar_setting"
            android:layout_width="@dimen/layout_view_top_bar_top_side_bar_w"
            android:layout_height="@dimen/layout_view_top_bar_top_side_bar_h"
            android:src="@drawable/bg_selector_setting"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>